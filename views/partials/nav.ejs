<header class="sticky top-0 z-50">
  <nav class="backdrop-blur-sm bg-gradient-to-r from-red-500/80 via-rose-500/60 to-pink-500/60 text-black shadow-lg">
    <div class="container mx-auto px-4 py-3 flex items-center justify-between gap-4">
      <!-- Brand / Logo -->
      <a href="/" class="flex items-center gap-3 shrink-0">
        <div class="w-10 h-10 rounded-lg bg-white/20 p-1 flex items-center justify-center transform transition-transform hover:scale-105">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" class="w-7 h-7 text-black">
            <path d="M3 11.5L12 4l9 7.5v7A2.5 2.5 0 0118.5 23h-13A2.5 2.5 0 013 18.5v-7z" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <span class="font-semibold text-lg tracking-wide">airbnb</span>
      </a>

      <!-- Search / Center -->
      <div class="hidden md:flex items-center flex-1 max-w-2xl mx-4">
        <form action="/search" method="GET" class="w-full">
          <label class="relative block">
            <input
              name="q"
              type="search"
              placeholder="Search homes, cities or experiences"
              class="w-full rounded-full bg-white/10 placeholder-white/70 text-black px-4 py-2 pl-10 focus:outline-none focus:ring-2 focus:ring-white/30 transition"
            />
            <span class="absolute inset-y-0 left-0 flex items-center pl-3">
              <svg class="w-5 h-5 text-black" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M10.5 18a7.5 7.5 0 100-15 7.5 7.5 0 000 15z" />
              </svg>
            </span>
          </label>
        </form>
      </div>

      <!-- Actions / Profile -->
      <div class="flex items-center gap-3">
        <div class="hidden md:flex items-center gap-2">
          <a href="/explore" class="px-3 py-2 rounded-lg hover:bg-white/10 transition">Explore</a>
          <a href="/host/host-home-list" class="px-3 py-2 rounded-lg hover:bg-white/10 transition">Host</a>
        </div>

        <% if (!isLoggedIn) { %>
        <div class="hidden sm:flex items-center gap-2">
          <a href="/signup" class="hidden md:inline-block px-4 py-2 rounded-full border border-white/25 hover:bg-white/10 transition">Sign up</a>
          <a href="/login" class="inline-flex items-center px-4 py-2 rounded-full bg-white text-red-600 font-medium hover:opacity-95 transition">Log in</a>
        </div>
        <% } else { %>
        <div class="flex items-center gap-2">
          <!-- Notifications -->
          <a href="#" title="Notifications" class="hidden sm:inline-flex p-2 rounded-full hover:bg-white/10 transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6 6 0 10-12 0v3.159c0 .538-.214 1.055-.595 1.436L4 17h11z" />
            </svg>
          </a>

          <!-- Profile dropdown -->
          <div class="relative" id="profile-menu-root">
            <button id="profile-button" class="flex items-center gap-2 bg-white/10 hover:bg-white/15 px-3 py-2 rounded-full transition">
              <% if (user && user.name) { %>
                <span class="w-8 h-8 rounded-full bg-gradient-to-br from-pink-400 to-red-400 flex items-center justify-center text-sm font-semibold"> <%= user.name.charAt(0).toUpperCase() %> </span>
              <% } else { %>
                <span class="w-8 h-8 rounded-full bg-white/20 flex items-center justify-center text-sm">U</span>
              <% } %>
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>

            <div id="profile-menu" class="hidden absolute right-0 mt-2 w-56 bg-white/5 rounded-lg backdrop-blur-sm p-2 shadow-lg ring-1 ring-white/10">
              <div class="py-2">
                <a href="/profile" class="block px-3 py-2 rounded hover:bg-white/10 transition">Your profile</a>
                <% if (user && user.userType === 'guest') { %>
                  <a href="/favourites" class="block px-3 py-2 rounded hover:bg-white/10 transition">Favourites</a>
                  <a href="/bookings" class="block px-3 py-2 rounded hover:bg-white/10 transition">Bookings</a>
                <% } else { %>
                  <a href="/host/host-home-list" class="block px-3 py-2 rounded hover:bg-white/10 transition">Host dashboard</a>
                  <a href="/host/add-home" class="block px-3 py-2 rounded hover:bg-white/10 transition">Add a home</a>
                <% } %>
                <div class="border-t border-white/10 my-2"></div>
                <form action="/logout" method="POST"><button type="submit" class="w-full text-left px-3 py-2 rounded hover:bg-white/10 transition">Logout</button></form>
              </div>
            </div>
          </div>
        </div>
        <% } %>

        <!-- Mobile menu button -->
        <button id="mobile-toggle" class="ml-1 p-2 rounded-md md:hidden bg-white/10 hover:bg-white/15">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Slide-over -->
    <div id="mobile-drawer" class="fixed inset-0 z-40 hidden">
      <div id="drawer-backdrop" class="absolute inset-0 bg-black/40 backdrop-blur-sm"></div>
      <aside class="absolute right-0 top-0 h-full w-72 bg-gradient-to-b from-red-600 to-pink-500 text-black p-4 shadow-2xl transform transition-transform">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-white/20 flex items-center justify-center"> <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 11.5L12 4l9 7.5v7A2.5 2.5 0 0118.5 23h-13A2.5 2.5 0 013 18.5v-7z"/></svg></div>
            <div>
              <div class="font-semibold"><%= (user && user.name) ? user.name : 'Welcome' %></div>
              <div class="text-xs text-black"><%= (user && user.email) ? user.email : 'Join us' %></div>
            </div>
          </div>
          <button id="drawer-close" class="p-2 rounded-md hover:bg-white/10">âœ•</button>
        </div>

        <nav class="space-y-1">
          <% if (isLoggedIn) { %>
            <% if (user && user.userType === 'guest') { %>
              <a href="/homes" class="block px-3 py-2 rounded hover:bg-white/10">Homes</a>
              <a href="/favourites" class="block px-3 py-2 rounded hover:bg-white/10">Favourites</a>
              <a href="/bookings" class="block px-3 py-2 rounded hover:bg-white/10">Bookings</a>
            <% } else { %>
              <a href="/host/host-home-list" class="block px-3 py-2 rounded hover:bg-white/10">Host Homes</a>
              <a href="/host/add-home" class="block px-3 py-2 rounded hover:bg-white/10">Add Home</a>
            <% } %>
            <form action="/logout" method="POST"><button type="submit" class="w-full text-left px-3 py-2 rounded hover:bg-white/10">Logout</button></form>
          <% } else { %>
            <a href="/signup" class="block px-3 py-2 rounded hover:bg-white/10">Sign up</a>
            <a href="/login" class="block px-3 py-2 rounded bg-white text-red-600">Log in</a>
          <% } %>
        </nav>
      </aside>
    </div>
  </nav>
</header>

<script>
  // Profile dropdown
  document.getElementById('profile-button')?.addEventListener('click', function (e) {
    e.stopPropagation();
    document.getElementById('profile-menu')?.classList.toggle('hidden');
  });
  // Close profile when clicking outside
  document.addEventListener('click', function () {
    document.getElementById('profile-menu')?.classList.add('hidden');
  });

  // Mobile drawer toggle
  const openDrawer = () => {
    document.getElementById('mobile-drawer')?.classList.remove('hidden');
  };
  const closeDrawer = () => {
    document.getElementById('mobile-drawer')?.classList.add('hidden');
  };
  document.getElementById('mobile-toggle')?.addEventListener('click', openDrawer);
  document.getElementById('drawer-close')?.addEventListener('click', closeDrawer);
  document.getElementById('drawer-backdrop')?.addEventListener('click', closeDrawer);
</script>
